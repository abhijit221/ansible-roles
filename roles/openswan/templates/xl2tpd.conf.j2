[global]
port = 1701
debug tunnel = yes
debug avp = yes
debug network = yes
debug state = yes

[lns default]
ip range = 10.0.0.241-10.0.0.254
local ip = {{ ansible_eth0['ipv4']['address'] }}
require chap = no
unix authentication = yes
refuse pap = no
require authentication = yes
name = l2tpd
ppp debug = yes
pppoptfile = /etc/ppp/options.xl2tpd
length bit = yes
